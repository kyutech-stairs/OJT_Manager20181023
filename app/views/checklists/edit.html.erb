<body>
    <%= form_for(@checklist) do |form| %>
        <div class="content">
            <div class="background-box">
                <div class="content-area">

                    <div class="content-title-input">
                        <p>チェックリスト編集</p>
                        <p>
                            <%= form.number_field :number %>
                        </p>
                        <%= form.text_field :name %>
                    </div>
                    <div class="text-area">
                        <%= form.text_area :content, :size => "50×15"%>
                    </div>
                    <div class="link-button">
                        <%= form.submit "変更" %>
                    </div>

                </div>
            </div>
        </div>
        <% end %>

            <%= link_to("シラバス",sirabasus_path) %>
</body>
