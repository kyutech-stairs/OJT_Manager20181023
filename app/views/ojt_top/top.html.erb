<div class="first-box">
  <div class="content-box">
    <h1>トップページ </h1>
    <% if current_kanrisya.admin == true %>
    <% if @company.present? %>
     <h3><%= @company.cname %> <%= @company.cname_sub %> </h3>
     <p><%= link_to "設定", user_hei2_path %></p>
   <% else %>
     <p><%= link_to "会社名登録", user_hei_path %></p>
   <% end %>
    <!---<p> ログインユーザー<%= link_to current_kanrisya.name,user_path(current_kanrisya) %></p>--->
    <div class="top-storage">
      <p>直近のチェックリスト完了者</p>
      <div class="top-card">
        <% @checkuser.each do |checkuser| %>
        <% if @user[checkuser.id].cid == current_kanrisya.cid &&  @user[checkuser.id].check_time.present?%>
        <%= link_to user_path(@user[checkuser.id]) do %>
        <div class="top-card__box">
          <div class="top-card__flex">
            <div class="top-card__photo">
              <% if  @user[checkuser.id].image.present?%>
              <%= image_tag @user[checkuser.id].image.url, :size =>'90x90' %>
              <% end %>
            </div>
            <div class="top-card__graph">
              <p><%= @check_parcent[checkuser.id] %>%</p>
              <% if @user_sign[checkuser.id] == true %>
              ！
              <%end%>
            </div>
          </div>
          <div class="top-card__name">
            <p><%= @user[checkuser.id].name %></p>
            <!--<p><%=link_to @user[checkuser.id].name, user_path(@user[checkuser.id])%></p>-->
          </div>
          <div class="top-card__belongs">
            <p><%= @user[checkuser.id].belong %></p>
          </div>
        </div>
        <% end %>
        <% end %>
        <% end %>
      </div>
    </div>
    <div class="top-storage">
      <p>新着情報</p>
      <div class="top-card">

      </div>
    </div>
    <% else %>
    <!--従業員のみに表示-->
    あなたが最近取り組んでいるシラバス
    <% if @sirabasu.empty? %>
    はありません<br>
    <% else %>
    <br>
    <% @sirabasu.each do |sira| %>
    <%= sira.number %>
    <%= link_to sira.name, sirabasu_path(sira.number) %>
    <%= @updated[sira.id].in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M:%S") %>
    <%= @percent[sira.id] %><br>
    <% end %>
    <% end%>
    <% end %>
  </div>
</div>
