<div class="first-box">
  <div class="content-box">
    <h1>シラバス</h1>

    <div class="lists">
      <p>一覧</p>
      <table>
        <tbody>
          <% @sirabasu.each do |sirabasu| %>
          <tr>
            <td><%= sirabasu.number %>. </td>
            <td><%= link_to sirabasu.name, sirabasu_path(sirabasu.number) %></td>
            <% if current_kanrisya.admin == true %>
              <td><%= link_to(content_tag(:i,'edit',class:'material-icons'), edit_sirabasu_path(sirabasu.number)) %></td>
              <td><%= link_to(content_tag(:i,'delete',class:'material-icons'), sirabasu_path(sirabasu.number), :method => :delete) %></td>
              <td><%= link_to(content_tag(:i,'settings',class:'material-icons'), publishing_config_path(sirabasu.number)) %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if current_kanrisya.admin == true %>
      <%= link_to new_sirabasu_path, class:'link-button' do %>
        <div>
          <i class='material-icons'>add</i>
          新規作成
        </div>
      <% end %>
    <% end %>

    <p><%= link_to 'トップへ', '/ojt_top/top' %></p>
  </div>
</div>
