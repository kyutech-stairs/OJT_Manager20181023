<div class="first-box">
  <div class="content-box">
    <h1>シラバス</h1>

    <div class="lists">
      <p>一覧<p>
      <table>
        <tbody>
          <% @sirabasu.each do |sirabasu| %>
          <tr>
            <td><%= sirabasu.number %>. </td>
            <td><%= link_to sirabasu.name, sirabasu_path(sirabasu.number) %></td>
            <% if current_kanrisya.admin == true %>
              <td><%= link_to "編集", edit_sirabasu_path(sirabasu.number) %></td>
              <td><%= link_to "削除", sirabasu_path(sirabasu.number), method: :delete, data: {confirm: "削除しますか？"} %></td>
              <td><%= link_to "公開設定", publishing_config_path(sirabasu.number) %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if current_kanrisya.admin == true %>
      <%= link_to '新規作成', new_sirabasu_path, :class=> "link-button" %>
    <% end %>
    <p><%= link_to 'トップへ', '/ojt_top/top' %></p>
  </div>
</div>
