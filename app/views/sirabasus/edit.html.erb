<%= form_for @sirabasu,url: sirabasu_path do |f| %>
<!--エラーがあれば表示しています吉井-->
<% if @sirabasu.errors.any? %>
<ul>
    <% @sirabasu.errors.full_messages.each do |message| %>
    <li>
        <%= message%>
    </li>
    <% end %>
</ul>
<% end %>
<div class="first-box">
    <div class="content-box">
        <h1>シラバス編集</h1>

        <div class="field">
            <%= f.label :section_number, "章番号" %><br />
            <%= f.number_field :number ,:readonly => true,:value => "#{@sirabasu.number}",:class => "input-box" %>
        </div>

        <div class="field">
            <%= f.label :section_name, "タイトル" %><br />
            <%= f.text_field :name ,:placeholder => "タイトル", :class => "input-box"%>
        </div>

        <div class="field">
            <%= f.label :section_name, "内容" %><br />
            <%= f.text_area :content, :class => "text-area"%>
            <p><%= f.file_field :image, multiple: true %></p>
            <% if @sirabasu.image?%>
            <% i = 1 %>
            <% @sirabasu.image.each do |image|%>
            <%=image_tag image.url , :size =>'130x130'%>画像<%= i %>
            <% i = i + 1 %>
            <% end %>
            <% end %>
        </div>
        <%= f.nested_fields_for :checklists, wrapper_tag: :div do |che| %>
        <div class="fields">
            <%#= che.number_field :number ,:readonly => true, :value %>
            <%= che.hidden_field :number , :value => "#{@checklist_num}"%>
            <%= che.text_area :content, :class => "text-area", :size => "50×15"%>
            <%= che.hidden_field :cid, value: current_kanrisya.cid %>
            <%= che.hidden_field :userid, value: current_kanrisya.id %>
            <%= che.remove_nested_fields_link '削除', class: 'btn btn-danger', role: 'button' %>
        </div>
        <% end %>
        <%= f.add_nested_fields_link :checklists, '--------追加--------', class: 'btn btn-primary', role: 'button'  %>
        <div class="field">
            <%= f.submit "保存", :class=> "link-button"%>
        </div>
    </div>
</div>
<% end %>

<%= link_to 'シラバス一覧へ', sirabasus_path %>
