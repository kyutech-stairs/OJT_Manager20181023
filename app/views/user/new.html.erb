<h1>新しい社員の登録</h1>

<%= form_for @kanrisya,:url => {:action => :create} do |f| %>
<p><%= f.label :name, '名前' %>
<%= f.text_field :name %></p>
<p><%= f.label :crew_number, '社員番号' %>
<%= f.text_field :crew_number %></p>
<p><%= f.label :sex, '性別' %>
<%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {} %></p>
<p><%= f.label :age, '年齢' %>
<%= f.number_field :age %></p>
<p><%= f.label :email, 'メールアドレス' %>
<%= f.email_field :email %></p>
<p><%= f.label :password, 'パスワード' %>
<%= f.password_field :password %></p>
<p><%= f.label :password_confirmation, 'パスワード（もう１度ご入力ください）' %>
<%= f.password_field :password_confirmation %></p>
<p><%= f.label :admin, '管理権限を与える場合はチェックを入れてください' %>
<%= f.check_box :admin, { }, true, false %>
</p>

<%= f.hidden_field :cid, value: current_kanrisya.cid %>

<p><%= f.submit '登録する' %></p>
<% end %>

<%= link_to 'Back', "/user/index" %>
