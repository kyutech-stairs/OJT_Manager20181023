<div class="first-box">
  <div class="content-box">
    <h1>プロフィール</h1>
    <% if @kanrisya.cid == current_kanrisya.cid %>

    <div class="plofile">
      <div class='plofile-img'>
        <% if  @kanrisya.image.present?%>
        <%= image_tag @kanrisya.image.url, :size =>'150x150' %>
        <% end %>
      </div>
      <div class='plofile-name'>
        <h2>
          <%= @kanrisya.name %>
        </h2>
        <h3>
          <%= @kanrisya.admin ? '管理者' : '従業員' %>
        </h3>
      </div>
    </div>

    <div>
      <p>社員番号:
        <%= @kanrisya.crew_number %>
      </p>
      <% if @kanrisya.age.present? %>
      <p>年齢:
        <%= @kanrisya.age %>
      </p>
      <% end %>
      <p>
        性別:
        <%= @kanrisya.sex %>
      </p>
      <p>所属:
        <%= @kanrisya.belong %>
      </p>
      <p>メールアドレス
        <%= @kanrisya.email %>
      </p>
      <!--
      <p>管理権限
        <% if @kanrisya.admin==true %>あり
        <% else %>なし
        <%end%>
      </p>
      -->
      <% if @kanrisya.admin == false %>
      <!--
      <p>総チェック数
        <%= @check_ok_count %>
      </p>
      -->
      <p>総チェック割合
        <%= @check_parcent %>% (
        <%= @check_ok_count %>/
        <%= @check_count %>)
      </p>
      <h4>シラバスごとの進捗</h4>
      <table>
        <tbody>
          <% @sirabasu.each do |sirabasu| %>
          <tr>
            <td>
              <%= sirabasu.number %>.
              </td>
              <td>
              <%=link_to sirabasu.name, checklists_checkuser_path(:sirabasu_id => sirabasu.id,:kanrisya_id => @kanrisya.id)%>
            </td>
            <td>
              <%= @sirabasu_check_ok_parcent[sirabasu.number-1] %>% (
              <%= @sirabasu_check_ok[sirabasu.number-1] %>/
              <%= @sirabasu_check_count[sirabasu.number-1] %>
              )
            </td>
            <td>
            <!-- 完了 or 未承認 or 取組中 -->
              <% if @sirabasuuser[sirabasu.id].sirabasu_ok == true%>
              完了！ (承認日時: 
              <%= @sirabasuuser[sirabasu.id].updated_at.in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M:%S") %>
              )
              <% elsif @sirabasu_check_ok_parcent[sirabasu.number-1] == 100 %>
              未承認
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>

    <% if current_kanrisya.admin == true %>
    <%= link_to edit_user_path(@kanrisya) do %>
    <div class="weak-button">
      <i class='material-icons'>edit</i>編集
    </div>
    <% end %>
    <%= link_to user_path(@kanrisya), :method => :delete, data: {confirm: "削除しますか？"} do %>
    <div class="weak-button">
      <i class="material-icons">delete</i>削除
    </div>
    <% end %>
    <% end %>
    <% else %>
    あなたの会社の社員ではありません。
    <% end %>
    <br>
    <%#= link_to 'ユーザ一覧へ', "/user/index" %>
  </div>
</div>