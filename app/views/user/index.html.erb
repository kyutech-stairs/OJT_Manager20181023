<div class="first-box">
  <div class="content-box">
    <h1>ユーザ一覧</h1>

    <%=form_tag({ controller: 'user', action: 'index' },{ method: "get"}) do %>
      <%= text_field_tag(:name, '', class: 'input-box') %>
      <%= submit_tag '検索'%>
      <%= link_to "詳細検索", "/user/search" %>
    <% end %>
    <% if @user.present? || @user2.present? && params[:commit] == "検索" then %>
      <p>検索結果</p>
      <% @user.each do |user| %>
        <p><%=link_to user.name ,user_path(user)%>
        </p>
    <% end %>

    <% if @i != 0 %>
      <% for num in 0..(@i-1) %>
        <p>
        <%= link_to @user2[num].name, user_path(@user2[num]) %>
        </p>
      <% end %>
      <p>以上 <%= @i %>名</p>
    <% else %>
      <p>以上 <%= @user.count %>名</p>
    <% end %>
    <% elsif params[:commit] == "検索"then %>
      <p>検索結果　その検索条件での該当者はいませんでした</p>
    <% end %>

    <div class="lists">
      <p>管理者</p>
      <table>
        <tbody>
          <% @kanrisya.each do |kanrisya| %>
          <% if kanrisya.cid == current_kanrisya.cid %>
            <% if kanrisya.admin == true %>
          <tr>
            <td>
              <% if kanrisya.image? %>
                  <%= image_tag kanrisya.image.url, :size =>'150x150' %>
              <% end %>
                  <%=link_to kanrisya.name ,user_path(kanrisya)%>
            </td>
          </tr>
          <% end %>
        <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="lists">
      <p>従業員</p>
      <table>
        <tbody>
          <% @kanrisya.each do |kanrisya| %>
          <% if kanrisya.cid == current_kanrisya.cid %>
            <% if kanrisya.admin == false %>
          <tr>
            <td>
              <% if kanrisya.image? %>
              <%= image_tag kanrisya.image.url, :size =>'150x150' %>
              <% end %>
                  <%=link_to kanrisya.name ,user_path(kanrisya)%>
            </td>
          </tr>
          <% end %>
        <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if current_kanrisya.admin == true %>
      <p><%= link_to '新しい社員登録', '/user/new' %></p>
    <% end %>

  </div>
</div>